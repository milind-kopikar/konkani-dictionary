# Railway Environment Configuration
# Copy this to .env.railway and customize for your Railway deployment

# Database Configuration (Railway provides DATABASE_URL)
DATABASE_URL=postgresql://postgres:your-password@containers-us-west-1.railway.app:5432/railway

# Environment
NODE_ENV=production

# API Configuration
API_BASE_URL=https://your-railway-app.railway.app/api

# Migration Safety (set to true only when deploying)
MIGRATE_ALLOW=false
MIGRATE_SECRET=your-secure-migration-secret

# Optional: Custom pool settings (Railway defaults work well)
# DB_POOL_MAX=20
# DB_IDLE_TIMEOUT=30000
# DB_CONNECTION_TIMEOUT=2000

# SSL Configuration (Railway uses self-signed certs)
# DB_SSL_REJECT_UNAUTHORIZED=false