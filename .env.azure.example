# Azure Database for PostgreSQL Environment Configuration
# Copy this to .env.azure and customize for your Azure deployment

# Database Configuration
# Option 1: Full DATABASE_URL
DATABASE_URL=postgresql://your-user@your-server:your-password@your-server.postgres.database.azure.com:5432/your-database

# Option 2: Individual variables (alternative to DATABASE_URL)
# PGHOST=your-server.postgres.database.azure.com
# PGUSER=your-user@your-server
# PGPASSWORD=your-password
# PGDATABASE=your-database
# PGPORT=5432

# Environment
NODE_ENV=production

# API Configuration
API_BASE_URL=https://your-azure-app.azurewebsites.net/api

# Migration Safety
MIGRATE_ALLOW=false
MIGRATE_SECRET=your-secure-migration-secret

# SSL Configuration (Azure requires SSL)
DB_SSL_REJECT_UNAUTHORIZED=false

# Connection Pool (adjust based on your Azure pricing tier)
DB_POOL_MAX=15
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=5000

# Azure-specific settings
# Note: Username format must be 'user@server' for Azure Database